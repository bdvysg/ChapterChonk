@using ChapterChonk.Models.ViewModels;
@model ShopingCartVM

<form method="post">
    <br />
    <div class="card shadow border-0">
        <div class="card-header bg-secondary bg-gradient  ml-0 py-4">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2">
                        Shopping Cart
                    </h5>
                </div>

            </div>
        </div>
        <div class="card-body my-4">
            <div class="row">
            </div>
            <div class="row mb-3 pb-3">
                <div class="col-md-2 offset-md-1">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary text-uppercase mb-5 btn-sm"><small>Continue Shopping</small></a>
                </div>
                <div class="col-md-10 offset-md-1">

                    @foreach(var cart in Model.ShopingCarts)
                    {                  
                        <div class="row border-bottom pb-3">
                            <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                <img src="@cart.Product.imageURL" class="rounded" width="100%" />
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <a asp-area="Costumer" asp-controller="Home" asp-action="Details" asp-route-id="@cart.Product.Id" class="text-decoration-none">
                                    <h6 class="text-uppercase"><strong>@cart.Product.Title</strong></h6>
                                </a>
                                <p><small>@Html.Raw(cart.Product.Description)</small></p>
                            </div>
                            <div class="col-12  col-lg-5 text-center row">
                                <div class="col-3 text-md-right pt-2 pt-md-4">
                                    <h6 class="fw-semibold">
                                        @cart.Price
                                        <span class="text-muted">&nbsp;x&nbsp;</span>@cart.Count
                                    </h6>
                                </div>
                                <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                    <div class="w-75 btn-group" role="group">
                                        <a asp-action="IncrementCount" asp-route-cartId="@cart.Id" class="btn btn-outline-primary bg-gradient py-2">
                                            <i class="bi bi-plus-square"></i>
                                        </a> &nbsp;
                                        <a asp-action="DecrementCount" asp-route-cartId="@cart.Id" class="btn btn-outline-primary bg-gradient py-2">
                                            <i class="bi bi-dash-square"></i>
                                        </a>
                                    </div>

                                </div>
                                <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                    <a asp-action="Remove" asp-route-cartId="@cart.Id" class="btn btn-danger bg-gradient py-2 ">
                                        <i class="bi bi-trash-fill"></i>
                                    </a>
                                </div>
                            </div>

                        </div>
                    }


                </div>
            </div>
            <div class="card-footer border-1">
                <div class="row">
                    <div class="col-md-4 offset-md-4">
                        <ul class="list-group mb-4 mt-4">
                            <li class="d-flex justify-content-between align-items-center p-1">
                                <h5 class="fw-semibold"> Total (USD)</h5>
                                <h4 class="">@Model.OrderTotal</h4>
                            </li>
                        </ul>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2 offset-md-5">
                        <a asp-action="Summary" class="btn btn-primary border-0 bg-gradient w-100 py-2">Summary</a>
                    </div>
                </div>
            </div>
        </div>
</form>
